<%= form_with(model: @book, local: true ) do |form| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
<div class="edit-cont">
  <%= form.label :content %>
  <%= form.text_field :content %>
</div><br><br>
<%= form.submit %>

<% end %>
